<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fb_signin_button"
        android:backgroundTint="@color/com_facebook_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/fb_button_text"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/google_signin_button" />

    <Button
        android:id="@+id/google_signin_button"
        android:backgroundTint="@color/google_red"
        android:drawableLeft="@drawable/ico_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/gg_button_text"
        app:layout_constraintBottom_toTopOf="@id/mail_signin_button" />
    <Button
        android:id="@+id/mail_signin_button"
        android:backgroundTint="@color/mail_gray"
        android:drawableLeft="@drawable/ico_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:text="@string/mail_button_text"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>